<h1>Edit Position</h1>

<%= form_with model: @position, url: edit_portfolio_position_path do |f| %>

  <% if @position.errors.any? %>
    You have <%= pluralize(@position.errors.count, 'error') %>
    <%= @position.errors.full_messages.each do |message|%>
      <%= message %>
    <% end %>
  <% end %>

  <p>
    <%= f.label :owned_shares %><br>
    <%= f.text_field :owned_shares %>
  </p>
  <p>
    <%= f.label :purchase_price %><br>
    <%= f.text_field :purchase_price %>
  </p>
  <p>
    <%= f.label :sale_price %><br>
    <%= f.text_field :sale_price %>
  </p>
  <p>
    <%= f.submit "Update Position" %>
  </p>

<% end %>
